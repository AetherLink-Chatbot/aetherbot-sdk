{
  "name": "@aetherbot/widget",
  "version": "0.2.0",
  "description": "Embeddable AetherBot chat widget for browser and npm consumers",
  "type": "module",
  "main": "./dist/aetherbot-sdk.cjs",
  "module": "./dist/aetherbot-sdk.mjs",
  "browser": "./dist/aetherbot-sdk.umd.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/aetherbot-sdk.mjs",
      "require": "./dist/aetherbot-sdk.cjs",
      "browser": "./dist/aetherbot-sdk.umd.js",
      "default": "./dist/aetherbot-sdk.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "license": "MIT",
  "keywords": [
    "aetherbot",
    "chat",
    "widget",
    "sdk"
  ],
  "scripts": {
    "build": "vite build --config vite.config.ts && tsc -p tsconfig.json",
    "build:widget": "vite build --config vite.config.ts",
    "build:types": "tsc -p tsconfig.json",
    "dev:demo": "vite --config demo/vite.config.ts",
    "preview:demo": "vite preview --config demo/vite.config.ts --open"
  },
  "dependencies": {
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.0"
  }
}
